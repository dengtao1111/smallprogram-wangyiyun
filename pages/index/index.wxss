.title {
  padding: 0 10px;
  border-bottom: 2px solid #c20c0c;
  height: 30px;
  line-height: 30px;
}

.title text {
  font-weight: bold;
}

.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item {
  width: 200rpx;
  padding: 0 10px;
  display: flex;
  flex-flow: column;
  margin-top: 10px;
}

.pic {
  width: 200rpx;
  height: 200rpx;
}

.songs {
  overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
.singer{
  color: #666666;
  font-size: 14px;
}